<style>
        table
        {
          width: 100%;
          border: 1px solid;
        }
      
        td
        {
          text-align: left;
          padding-left: 10px;
        }
      
        th
        {
          background-color: rgb(179, 179, 179);
        }
      
      </style>
      

<table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Amount</th>
            <th>Price</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
            <% products.forEach(function(pro){ %>
              <tr>
                <td><%=pro.id%></td>
                <td><%=pro.name%></td>
                <td><%=pro.amount%></td>
                <td><%=pro.price%></td>          
                <td><%=pro.description%></td>
              </tr>
            <% }); %>
        </tbody>
      </table>